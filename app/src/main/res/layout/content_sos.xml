<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="chung.bb.SosActivity"
    tools:showIn="@layout/activity_sos">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Physical Bullying"
        android:id="@+id/btn_physical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relation Aggregation"
        android:id="@+id/btn_relation"
        android:layout_below="@+id/btn_cyber"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cyber Bullying"
        android:id="@+id/btn_cyber"
        android:layout_below="@+id/btn_verbal"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verbal Bullying"
        android:id="@+id/btn_verbal"
        android:layout_below="@+id/btn_physical"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc"
        android:layout_above="@+id/btn_physical"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
